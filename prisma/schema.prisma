generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "sqlite"
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  accounts      Account[]
  sessions      Session[]
  plans         Plan[]
  workoutLogs   WorkoutLog[]
  checkIns      CheckIn[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Plan {
  id          String   @id @default(cuid())
  userId      String?
  name        String
  data        String
  inputs      String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  user        User?    @relation(fields: [userId], references: [id], onDelete: SetNull)
  workoutLogs WorkoutLog[]
  checkIns    CheckIn[]
}

model WorkoutLog {
  id        String   @id @default(cuid())
  planId    String
  userId    String?
  date      DateTime @default(now())
  dayIndex  Int
  dayName   String
  exercises String
  notes     String?
  plan      Plan     @relation(fields: [planId], references: [id], onDelete: Cascade)
  user      User?    @relation(fields: [userId], references: [id], onDelete: SetNull)
}

model CheckIn {
  id                 String   @id @default(cuid())
  planId             String
  userId             String?
  date               DateTime @default(now())
  weekNumber         Int
  hitsTargets        Boolean
  notes              String?
  progressionApplied Boolean  @default(false)
  plan               Plan     @relation(fields: [planId], references: [id], onDelete: Cascade)
  user               User?    @relation(fields: [userId], references: [id], onDelete: SetNull)
}
